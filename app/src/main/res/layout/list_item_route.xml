    <data>

        <variable
            name="viewModel"
            type="com.sosnowskydevelop.tourroutessaratovregion.viewmodels.RouteListItemViewModel" />
    </data>

    <TextView
        android:id="@+id/routeName"
        android:layout_width="match_parent"
